generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum EstadoReserva {
  PENDIENTE
  PAGO_PARCIAL
  PAGADA
  CANCELADA
}

model Reserva {
  id               String        @id @default(uuid())
  fechaInicio      DateTime
  fechaFin         DateTime
  cantidadPersonas Int
  precioTotal      Float
  estado           EstadoReserva @default(PENDIENTE)
  pagoParcial      Float?

  unidad  Unidad  @relation(fields: [unidadId], references: [id])
  cliente Cliente @relation(fields: [clienteId], references: [id])

  fechaHoraCreacion  DateTime @default(now())
  fechaActualizacion DateTime @updatedAt

  unidadId  Int
  clienteId Int
}

model Unidad {
  id               Int                @id @default(autoincrement())
  tipoUnidad       String             @default("TIPO_POR_DEFECTO")
  nombre           String
  capacidad        Int
  servicios        String[]
  precioPorNoche   Float?
  imagenes         String[]
  Reserva          Reserva[]
  propiedadId      Int
  propiedad        Propiedad          @relation(fields: [propiedadId], references: [id])
  ServiciosXUnidad ServiciosXUnidad[]
}

model Cliente {
  id       Int       @id @default(autoincrement())
  nombre   String
  telefono String
  email    String?
  reserva  Reserva[]
}

model Pais {
  id         Int         @id @default(autoincrement())
  nombre     String
  provincias Provincia[]
}

model Provincia {
  id       Int      @id @default(autoincrement())
  nombre   String
  paisId   Int
  pais     Pais     @relation(fields: [paisId], references: [id])
  ciudades Ciudad[]
}

model Ciudad {
  id          Int       @id @default(autoincrement())
  nombre      String
  provinciaId Int
  provincia   Provincia @relation(fields: [provinciaId], references: [id])
  calles      Calle[]
}

model Calle {
  id          Int         @id @default(autoincrement())
  nombre      String
  ciudadId    Int
  ciudad      Ciudad      @relation(fields: [ciudadId], references: [id])
  propiedades Propiedad[]
}

model Propiedad {
  id       Int      @id @default(autoincrement())
  nombre   String
  calleId  Int
  calle    Calle    @relation(fields: [calleId], references: [id])
  numero   Int
  tipo     String
  unidades Unidad[]
}

model Servicio {
  id     Int                @id @default(autoincrement())
  nombre String             @unique
  unidad ServiciosXUnidad[]
}

model ServiciosXUnidad {
  unidad     Unidad   @relation(fields: [unidadId], references: [id])
  unidadId   Int
  servicio   Servicio @relation(fields: [servicioId], references: [id])
  servicioId Int

  @@id([unidadId, servicioId])
}
